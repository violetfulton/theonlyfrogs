<section class="ra-section">
  <div class="ra-widget">
    <h3>
    <a href="https://retroachievements.org/user/onlyfrogs"
       target="_blank" rel="noopener">
      üèÜ RetroAchievements
    </a>
  </h3>

    <ul class="ra-list">
      {% for item in retroachievements.recent %}
        <li class="ra-item">
          <img class="ra-icon" src="{{ item.gameIconUrl }}" alt="{{ item.gameTitle }}" loading="lazy">

          <div class="ra-main">
            <div class="ra-top">
              <a class="ra-game"
                 href="https://retroachievements.org/game/{{ item.gameId }}"
                 target="_blank" rel="noopener">
                {{ item.gameTitle }}
              </a>

              <span class="ra-console-badge">{{ item.consoleName }}</span>

              {% if item.hardcore %}
                <span class="ra-hardcore-badge" title="Hardcore mode">HC</span>
              {% endif %}
            </div>

            <div class="ra-sub ra-ach-row">
              {% if item.achievementIconUrl %}
                <img class="ra-ach-icon" src="{{ item.achievementIconUrl }}" alt="" loading="lazy">
              {% endif %}

              <a class="ra-ach"
                 href="https://retroachievements.org/achievement/{{ item.achievementId }}"
                 target="_blank" rel="noopener">
                {{ item.title }}
              </a>
            </div>

            <div class="ra-meta">
              <span class="ra-date">Unlocked: {{ item.dateAgo }}</span>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
