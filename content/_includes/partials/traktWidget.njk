<section class="trakt-section">
  <div class="trakt-widget">
    <h3>ðŸ“ºðŸŽ¬ Trakt</h3>
    <p class="trakt-subtitle">current show + last 3 movies</p>

    {# --- Current show (1 item) --- #}
    {% if traktNow.show %}
      <div class="trakt-current-card">
        <a href="{{ traktNow.show.url }}" target="_blank" rel="noopener">
          <div class="trakt-current-img">
            <img src="{{ traktNow.show.poster }}" alt="{{ traktNow.show.title }}" loading="lazy">
            {% if traktNow.show.pill %}
              <span class="trakt-pill">{{ traktNow.show.pill }}</span>
            {% endif %}
          </div>

          <div class="trakt-current-info">
            <h4>{{ traktNow.show.title }}</h4>
            <p class="trakt-meta">
              {% if traktNow.show.year %}{{ traktNow.show.year }} Â· {% endif %}
              <span class="trakt-stars">{{ traktNow.show.stars }}</span>
            </p>

            {% if traktNow.show.subtitle %}
              <p class="trakt-episode-title">{{ traktNow.show.subtitle }}</p>
            {% endif %}
          </div>
        </a>
      </div>
    {% endif %}

    {# --- Last 3 movies --- #}
    {% if traktNow.movies and traktNow.movies.length %}
      <div class="trakt-movies">
        {% for item in traktNow.movies %}
          <div class="trakt-movie">
            <a href="{{ item.url }}" target="_blank" rel="noopener">
              <img class="trakt-movie-thumb" src="{{ item.poster }}" alt="{{ item.title }}" loading="lazy">
              <div class="trakt-movie-meta">
                <span class="trakt-movie-title">{{ item.title }}</span>
                <span class="trakt-movie-sub">
                  {% if item.year %}{{ item.year }} Â· {% endif %}
                  {{ item.stars }}
                </span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="trakt-empty">no recent movies found :(</p>
    {% endif %}
  </div>
</section>
