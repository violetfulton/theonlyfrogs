<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title or "Blog" }}</title>
  <link rel="stylesheet" href="/assets/css/blog.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <!-- Header -->
  <header class="blog-header">
    <a href="/blog/">
      <img src="/assets/imgs/graphics/blog.gif" alt="Blog" class="blog-title-img">
    </a>
  </header>

  <!-- Layout -->
  <div class="blog-layout">
    <main class="blog-main">
      <div class="hanging-sticker">
        <img src="/assets/imgs/graphics/hangerpill.gif" alt="Sticker">
      </div>

      {{ content | safe }}
    </main>
  </div>

</body>
</html>
