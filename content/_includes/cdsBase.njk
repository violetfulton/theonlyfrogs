<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ title or "The Only Frogs - CD Collection" }}</title>
  <link rel="stylesheet" href="/assets/css/cdsTest.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/interests/cds/">CDs</a>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>&copy; {{ site.year }} The Only Frogs. All rights reserved.</p>
  </footer>

  <script>
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll('.cd-card').forEach(card => {
    const closeBtn = card.querySelector('.close-btn');

    // Open on card click
    card.addEventListener('click', () => {
      document.querySelectorAll('.cd-card').forEach(c => c !== card && c.classList.remove('active'));
      card.classList.toggle('active');
    });

    // Close button
    if (closeBtn) {
      closeBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // prevent triggering card click
        card.classList.remove('active');
      });
    }
  });
});
</script>

</body>
</html>
