<h1>Blog Archive<img src="/assets/imgs/graphics/syringe.gif" alt="Icon" class="heading-icon"></h1>

{% set years = posts | map('year') | unique | sort(false) | reverse %}
{% for year in years %}
  {% set count = (posts | selectattr("year", "equalto", year) | length) %}
  <section class="archive-year">
    <h2><a href="/blog/archive/{{ year }}/">{{ year }}</a> ({{ count }})</h2>
  </section>
{% endfor %}
