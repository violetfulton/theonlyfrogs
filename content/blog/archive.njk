<h1>Blog Archive</h1>

{% if collections.postsByYear %}
  {% for year, posts in collections.postsByYear %}
    <section class="archive-year">
      <h2>{{ year }}</h2>
      <ul>
        {% for post in posts %}
          <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <span class="post-date">({{ post.data.date | readableDate }})</span>
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endfor %}
{% else %}
  <p>No posts found yet.</p>
{% endif %}
