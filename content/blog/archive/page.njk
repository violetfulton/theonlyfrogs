---
layout: blogBase.njk
title: "All Posts Archive"
pagination:
  data: collections.posts
  size: 10
  alias: posts
permalink: /archive/page{{ pagination.pageNumber + 1 }}/
---


<h2>Archives</h2>
{% include "archive-list.njk" %}

<h2>All Posts</h2>
<ul>
{% for post in posts %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    {% if post.date | daysOld <= 7 %}
      <span class="new-tag">New</span>
    {% endif %}
    <small>{{ post.date | readableDate }}</small>
    <p>
      {{ post.templateContent | truncate(120, true, "...") | safe }}
      <a href="{{ post.url }}">Read more â†’</a>
    </p>
  </li>
{% endfor %}
</ul>

