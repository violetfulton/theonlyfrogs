<h1>Latest Posts
  <img src="/assets/imgs/graphics/syringe.gif" alt="Icon" class="heading-icon">
</h1>

{% set allPosts = firebasePosts | rejectattr("templateLanguage") %}
{% set sortedPosts = allPosts | sort(attribute='createdAt') | reverse %}

{% if sortedPosts.length %}
  <ul class="blog-list">
    {% for post in sortedPosts %}
      <li class="blog-item">
        <a href="/blog/{{ post.year }}/{{ post.slug }}/" class="blog-link">
          {{ post.title }}
        </a>
        <small class="blog-date">{{ post.createdAt | readableDate }}</small>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No posts found. Try again later!</p>
{% endif %}

