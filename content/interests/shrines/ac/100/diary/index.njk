---
title: "ACNL 100% Diary"
layout: base.njk
customcss: '/assets/css/ac-diary.css'
permalink: /shrines/animalcrossing/100/diary/
---

<div class="acnl-diary-nav">
  <a href="/shrines/animalcrossing/">⬅ Back to Animal Crossing Shrine</a>
  <a href="/">⬅ Home</a>
</div>

<section class="acnl-diary-layout">

  <aside class="acnl-diary-sidebar">
    <h3>Entries</h3>
    <ul>
      {# Build sidebar as Month -> Days #}
      {% set pageIndex = 0 %}
      {% for month in acnlDiary %}
        <li class="sidebar-month">
          <button class="month-toggle" type="button" data-month="{{ month.id }}">
            {{ month.label }}
          </button>
          <ul class="sidebar-days {% if not loop.first %}is-collapsed{% endif %}">
            {% for entry in month.entries %}
              <li>
                <a href="#" data-page="{{ pageIndex }}">
                  {{ entry.sidebarLabel }}
                </a>
              </li>
              {% set pageIndex = pageIndex + 1 %}
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </aside>

  <div class="acnl-diary-wrapper">
    <div class="acnl-diary-book">
      <div class="acnl-diary-spine"></div>

      <div class="acnl-diary-page-container">
        {# Build pages in the same order as sidebar #}
        {% set first = true %}
        {% for month in acnlDiary %}
          {% for entry in month.entries %}
            <article class="diary-page{% if first %} is-active{% endif %}">
              {% if first %}{% set first = false %}{% endif %}

              {% if entry.isIntro %}
                <h1>{{ entry.title }}</h1>
              {% else %}
                <h2>{{ entry.title }}</h2>
              {% endif %}

              {% if entry.meta %}
                <p class="diary-meta">{{ entry.meta }}</p>
              {% endif %}

              {% if entry.paragraphs %}
                {% for p in entry.paragraphs %}
                  <p>{{ p }}</p>
                {% endfor %}
              {% endif %}

              {% if entry.bullets %}
                <ul class="diary-list">
                  {% for item in entry.bullets %}
                    <li>{{ item }}</li>
                  {% endfor %}
                </ul>
              {% endif %}

              {% if entry.note %}
                <p class="diary-note">{{ entry.note }}</p>
              {% endif %}

              {% if entry.images %}
                <div class="diary-gallery">
                  {% for image in entry.images %}
                    <img src="{{ image.src }}" alt="{{ image.alt }}">
                  {% endfor %}
                </div>
              {% endif %}
            </article>
          {% endfor %}
        {% endfor %}
      </div>
    </div>

    <div class="acnl-diary-controls">
      <button id="diaryPrev" class="diary-btn" disabled>⬅ prev page</button>
      <span class="diary-page-indicator">
        page <span id="diaryCurrentPage">1</span> / <span id="diaryTotalPages">0</span>
      </span>
      <button id="diaryNext" class="diary-btn">next page ➡</button>
    </div>
  </div>
</section>

<script src="/assets/js/ac-diary.js" defer></script>
