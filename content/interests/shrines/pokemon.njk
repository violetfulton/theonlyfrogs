<script>
(() => {
  const dialog = document.querySelector(".gba-dialog");
  if (!dialog) return;

  // Respect reduced motion
  const reduce = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
  if (reduce) {
    dialog.classList.add("gba-typed-done");
    return;
  }

  const reveals = dialog.querySelectorAll(".gba-type__reveal");
  if (!reveals.length) return;

  let doneCount = 0;
  reveals.forEach(el => {
    el.addEventListener("animationend", () => {
      doneCount++;
      if (doneCount >= reveals.length) {
        dialog.classList.add("gba-typed-done");
      }
    }, { once: true });
  });
})();
</script>