---
layout: cdsBase.njk
title: "CD Collection"
---

<div class="cd-page-container">
  <!-- ===== Left TOC ===== -->
  <aside class="cd-toc">
    <h2>Artists</h2>
    {% set artists_seen = [] %}
    <ul>
      {% for cd in releases %}
        {% if cd.artist not in artists_seen %}
          {% set artists_seen = artists_seen.concat([cd.artist]) %}
          <li><a href="#artist-{{ loop.index0 }}">{{ cd.artist }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </aside>

  <!-- ===== Right CD Grid ===== -->
  <section class="cd-grid-container">
    {% set artists_seen = [] %}
    <div class="cd-grid">
      {% for cd in releases %}
        {% if cd.artist not in artists_seen %}
          {% set artists_seen = artists_seen.concat([cd.artist]) %}
          <div class="cd-card" id="artist-{{ loop.index0 }}">
        {% else %}
          <div class="cd-card">
        {% endif %}
            <img src="{{ cd.image }}" alt="{{ cd.title }}">
            <!-- Hover title overlay -->
            <div class="cd-overlay">{{ cd.title }}</div>

            <!-- Details panel -->
            <div class="details">
              <button class="close-btn">&times;</button>
              <p class="cd-info">{{ cd.artist }}</p>
              <p class="cd-info">{{ cd.year }}</p>
            </div>
          </div>
      {% endfor %}
    </div>
  </section>
</div>
