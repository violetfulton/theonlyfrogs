---
layout: cdsBase.njk
title: "CD Collection"
permalink: /cds/
---

<div class="cd-page-container">
  <section class="cd-grid-container">
    <div class="cd-grid">
      {% for cd in releases %}
        <div class="cd-card">
          <a href="#cd-{{ loop.index0 }}">
            <img src="{{ cd.image }}" alt="{{ cd.title }}" class="cd">
          </a>
        </div>
      {% endfor %}
    </div>
  </section>
</div>

<!-- Detailed view for each CD -->
{% for cd in releases %}
<div id="cd-{{ loop.index0 }}" class="cd-details">
  <div class="cddescs">
    <img src="{{ cd.image }}" alt="{{ cd.title }}" class="cd">
    <div class="cd-text">
      <h2>{{ cd.title }}</h2>
      <p><strong>Artist:</strong> {{ cd.artist }}</p>
      <p><strong>Released:</strong> {{ cd.year }}</p>

      {% if cd.userRating %}
        <p><strong>My Rating:</strong>
          <span class="stars">
            {% for i in [1, 2, 3, 4, 5] %}
              {% if i <= cd.userRating %}
                <span class="star filled">★</span>
              {% else %}
                <span class="star">☆</span>
              {% endif %}
            {% endfor %}
          </span>
        </p>
      {% endif %}
    </div>
  </div>
</div>
{% endfor %}
