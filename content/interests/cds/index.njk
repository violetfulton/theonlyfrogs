---
layout: cdsBase.njk
title: "CD Collection"
permalink: /cds/
---

<div class="cd-page-container">
  <section class="cd-grid-container">
    <div class="cd-grid">
      {% for cd in releases %}
        <div class="cd-card">
          <a href="#cd-{{ loop.index0 }}"> <!-- Link to specific section -->
            <img src="{{ cd.image }}" alt="{{ cd.title }}" class="cd">
          </a>
        </div>
      {% endfor %}
    </div>
  </section>
</div>

<!-- Example section for each CD -->
{% for cd in releases %}
<div id="cd-{{ loop.index0 }}" class="cd-details">
  <div class="cddescs"> <!-- Wrapped in cddescs div -->
    <img src="{{ cd.image }}" alt="{{ cd.title }}" class="cd"> <!-- Added image here -->
    <h2>{{ cd.title }}</h2>
    <p>Artist: {{ cd.artist }}</p>
    <p>Released: {{ cd.year }}</p>
    <p>Bop or Flop: {{ cd.bop_or_flop }}</p>
  </div>
</div>
{% endfor %}
