{# Combine movies + shows into one list for the grid #}
{% set combined = [] %}
{% for m in traktOwned.movies %}
  {% set combined = combined.concat([m]) %}
{% endfor %}
{% for s in traktOwned.shows %}
  {% set combined = combined.concat([s]) %}
{% endfor %}

<div class="movie-grid">
{% for item in combined %}
  {% set img = item.poster | default("/assets/imgs/frog-dvd-placeholder.png") %}

  <div class="movie-card"
       data-title="{{ item.title }}"
       data-year="{{ item.year or '' }}"
       data-img="{{ img }}"
       data-overview="{{ item.overview | default('') }}"
       data-my-rating="{{ item.my_rating | default('0') }}"
       data-media-type="{{ item.media_type }}"
       data-trakt="{{ item.trakt }}"
       data-seasons="{{ item.seasons_owned | default('') }}"
       data-index="{{ loop.index }}">

    <img src="{{ img }}" alt="{{ item.title }}" loading="lazy"
         onerror="this.src='/assets/imgs/frog-dvd-placeholder.png'">

    {% if item.media_type == "tv" and item.seasons_owned %}
      <span class="owned-season-badge">{{ item.seasons_owned }}</span>
    {% endif %}

    <p class="title">{{ item.title }}</p>
  </div>
{% endfor %}
</div>

